---
// src/layouts/MainLayout.astro
import '../styles/global.css';
// 1. IMPORT KOMPONEN IMAGE DARI ASTRO
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Hand-picked products and services curated by Zaidly Picks. Quality verified recommendations for real results.",
  image = "/default-share.jpg" 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url);
const socialImageURL = new URL(image, Astro.url);
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title} | Zaidly Picks</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />
    <meta name="google-site-verification" content="-_5rR5OonSa46ubUy5I2sHzN1esjGpcnd1em8We3a7c" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={`${title} | Zaidly Picks`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={`${title} | Zaidly Picks`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  </head>
  
  <body class="bg-slate-50 text-slate-900 font-['Inter',sans-serif] antialiased min-h-screen flex flex-col">
    
    <nav class="bg-white border-b border-slate-200 sticky top-0 z-50 backdrop-blur-sm bg-white/95">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
          
          <a href="/" class="group flex items-center gap-3 transition-opacity hover:opacity-80" aria-label="Zaidly Picks Home">
            <Image 
              src="/logopick.webp" 
              alt="logo zaidly picks" 
              width={40} 
              height={40}
              format="webp"
              class="w-10 h-10 rounded-lg shadow-sm"
              loading="eager"
            />
            <span class="text-xl font-black text-slate-900 tracking-tight">
              Zaidly <span class="text-cyan-600">Picks</span>
            </span>
          </a>

          <div class="flex items-center gap-6">
            <a href="/" class="text-sm font-semibold text-slate-600 hover:text-cyan-600 transition-colors">
              Home
            </a>
            <a href="/contact" class="text-sm font-semibold text-slate-600 hover:text-cyan-600 transition-colors">
              Contact
            </a>
          </div>

        </div>
      </div>
    </nav>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-slate-900 border-t border-slate-800 py-12">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="grid md:grid-cols-3 gap-8 mb-8 text-left">
          
          <div>
            <div class="flex items-center gap-3 mb-4">
              <Image 
                src="/logopick.webp" 
                alt="Zaidly Picks Logo" 
                width={36} 
                height={36}
                format="webp"
                class="h-9 w-auto brightness-0 invert" 
              />
              <span class="text-xl font-black text-white">
                Zaidly <span class="text-cyan-400">Picks</span>
              </span>
            </div>
            <p class="text-slate-300 text-sm leading-relaxed">
              Curating the best products and services for you. Quality verified, trusted recommendations.
            </p>
          </div>

          <div>
            <h3 class="text-white font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-slate-300 hover:text-cyan-400 text-sm transition-colors">Home</a></li>
              <li><a href="/contact" class="text-slate-300 hover:text-cyan-400 text-sm transition-colors">Contact</a></li>
              <li><a href="/privacy-policy" class="text-slate-300 hover:text-cyan-400 text-sm transition-colors">Privacy Policy</a></li>
              <li><a href="/terms" class="text-slate-300 hover:text-cyan-400 text-sm transition-colors">Terms of Service</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-white font-bold mb-4">Featured Products</h3>
            <ul class="space-y-2">
              <li><a href="/mitolyn" class="text-slate-300 hover:text-cyan-400 text-sm transition-colors">Mitolyn</a></li>
              <li><a href="/meta-ads" class="text-slate-300 hover:text-cyan-400 text-sm transition-colors">Meta Ads</a></li>
            </ul>
          </div>

        </div>

        <div class="border-t border-slate-800 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-center">
            <p class="text-slate-300 text-sm">
              &copy; {new Date().getFullYear()} <span class="text-cyan-400 font-semibold">Zaidly Picks</span>. All rights reserved.
            </p>
            <div class="flex items-center gap-6">
              <a href="https://www.instagram.com/zaidprd/" target="_blank" rel="noopener noreferrer" class="text-slate-300 hover:text-pink-400 transition-colors" aria-label="Follow on Instagram">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>
    
  </body>
</html>
