---
import MainLayout from './MainLayout.astro';
// 1. Import komponen Image dari Astro untuk optimasi
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  image: {
    url: ImageMetadata; // Perbaikan: Menggunakan ImageMetadata agar sesuai dengan helper image()
    alt: string;
  };
  tags: string[];
}

const { title, description, pubDate, author, image, tags } = Astro.props;
const formattedDate = new Intl.DateTimeFormat('id-ID', { 
  dateStyle: 'long' 
}).format(pubDate);
---

<MainLayout title={title} description={description}>
  
  <article class="bg-white">
    
    <div class="bg-slate-50 border-b border-slate-200 py-8">
      <div class="max-w-4xl mx-auto px-4">
        
        <nav class="text-sm text-slate-600 mb-6">
          <a href="/" class="hover:text-cyan-600 transition-colors">Home</a>
          <span class="mx-2">/</span>
          <a href="/blog" class="hover:text-cyan-600 transition-colors">Blog</a>
          <span class="mx-2">/</span>
          <span class="text-slate-900 font-bold">{title}</span>
        </nav>

        <div class="flex flex-wrap gap-2 mb-6">
          {tags.map(tag => (
            <span class="bg-cyan-100 text-cyan-700 text-xs font-bold px-3 py-1 rounded-full">
              {tag}
            </span>
          ))}
        </div>

        <h1 class="text-4xl md:text-5xl font-black text-slate-900 mb-6 leading-tight tracking-tighter uppercase italic">
          {title}
        </h1>

        <div class="flex items-center gap-4 text-slate-600 text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
            </svg>
            <span class="font-bold">{author}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
            <time datetime={pubDate.toISOString()} class="font-bold">{formattedDate}</time>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 -mt-8 mb-12">
      <div class="rounded-2xl overflow-hidden shadow-2xl border-4 border-white">
        <Image 
          src={image.url} 
          alt={image.alt}
          width={1200}
          height={675}
          class="w-full h-auto object-cover"
          format="webp"
          loading="eager" 
        />
      </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 pb-16">
      <div class="prose prose-lg prose-slate max-w-none 
        
        prose-headings:font-bold prose-headings:text-slate-900 prose-headings:tracking-tight
        prose-h2:text-3xl prose-h2:mt-16 prose-h2:mb-6 prose-h2:pb-3 prose-h2:border-b prose-h2:border-slate-200
        prose-h3:text-2xl prose-h3:mt-10 prose-h3:mb-4 prose-h3:text-cyan-700
        prose-h4:text-xl prose-h4:mt-8 prose-h4:mb-3
        
        prose-p:text-slate-700 prose-p:leading-relaxed prose-p:mb-6 prose-p:text-lg
        
        prose-a:text-cyan-600 prose-a:font-bold prose-a:no-underline 
        hover:prose-a:text-cyan-700 hover:prose-a:underline
        
        prose-strong:text-slate-900 prose-strong:font-bold
        prose-em:text-slate-700
        
        prose-ul:my-6 prose-ul:space-y-2
        prose-ol:my-6 prose-ol:space-y-2
        prose-li:text-slate-700 prose-li:text-lg prose-li:leading-relaxed
        prose-li:marker:text-cyan-600
        
        prose-blockquote:border-l-4 prose-blockquote:border-cyan-500 
        prose-blockquote:bg-cyan-50 prose-blockquote:py-4 prose-blockquote:px-6 
        prose-blockquote:my-8 prose-blockquote:rounded-r-lg
        prose-blockquote:text-slate-700 prose-blockquote:italic
        
        prose-code:text-cyan-700 prose-code:bg-cyan-50 
        prose-code:px-2 prose-code:py-1 prose-code:rounded 
        prose-code:text-base prose-code:font-bold
        prose-code:before:content-none prose-code:after:content-none
        
        prose-pre:bg-slate-900 prose-pre:text-slate-100 
        prose-pre:rounded-xl prose-pre:shadow-lg prose-pre:my-8
        
        prose-img:rounded-xl prose-img:shadow-lg prose-img:my-8
        prose-img:border prose-img:border-slate-200
        
        prose-table:my-8 prose-table:border prose-table:border-slate-200
        prose-thead:bg-slate-100 prose-thead:border-b prose-thead:border-slate-300
        prose-th:px-4 prose-th:py-3 prose-th:text-left prose-th:font-bold
        prose-td:px-4 prose-td:py-3 prose-td:border-t prose-td:border-slate-200">
        
        <slot />
      </div>

      <div class="mt-12 pt-8 border-t border-slate-200">
        <p class="text-slate-600 font-bold mb-4 text-lg">üì§ Bagikan artikel ini:</p>
        <div class="flex flex-wrap gap-3">
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#1877F2] hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-bold transition-all transform hover:scale-105 shadow-md flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>
          <a 
            href="https://www.instagram.com/zaidprd/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-gradient-to-tr from-[#f9ce34] via-[#ee2a7b] to-[#6228d7] hover:opacity-90 text-white px-6 py-3 rounded-lg font-bold transition-all transform hover:scale-105 shadow-md flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            Instagram
          </a>
        </div>
      </div>

      <div class="mt-8 text-center">
        <a 
          href="/blog" 
          class="inline-flex items-center gap-2 text-cyan-600 hover:text-cyan-700 font-bold text-lg transition-colors">
          ‚Üê Kembali ke Blog
        </a>
      </div>

    </div>

  </article>

</MainLayout>

<style>
  .prose img {
    border-radius: 1rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
</style>