---
import MainLayout from '../layouts/MainLayout.astro';

const products = [
  { 
    name: "Mitolyn", 
    desc: "Advanced mitochondrial support for natural energy and metabolism boost.", 
    link: "/mitolyn", 
    tag: "Health & Wellness",
    emoji: "âš¡",
